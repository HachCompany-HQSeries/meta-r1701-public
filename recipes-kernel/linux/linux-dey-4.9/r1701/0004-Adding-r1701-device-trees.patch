+/* Ethernet */
+&fec1 {
+    pinctrl-names = "default";
+    pinctrl-0 = <&pinctrl_enet1>;
+    phy-mode = "rmii";
+    phy-handle = <&ethphy0>;
+    phy-reset-gpios = <&gpio3 23 GPIO_ACTIVE_LOW>;
+    phy-reset-duration = <26>;

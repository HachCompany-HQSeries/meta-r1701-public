+                MX6UL_PAD_JTAG_TCK__GPIO1_IO14      0x10b0  /* PRB2_DET&    */
+                MX6UL_PAD_UART3_RTS_B__GPIO1_IO27   0xf0b0  /* PRB2_OFF     */
+                MX6UL_PAD_ENET2_RX_DATA0__GPIO2_IO08 0x10b0 /* PRB2_EN&     */

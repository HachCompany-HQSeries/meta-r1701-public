+	case USB_BUS_ADD://USB_EVENT_ID:
 		/* Enable boost mode */
 		ret = bq25890_field_write(bq, F_OTG_CFG, 1);
+
 		if (ret < 0)
 			goto error;
+
+		mutex_lock(&bq->lock);
+		bq->state.online = 1;
+		bq->state.chrg_type = CHRG_OTG;
+		mutex_unlock(&bq->lock);
+
 		break;
 

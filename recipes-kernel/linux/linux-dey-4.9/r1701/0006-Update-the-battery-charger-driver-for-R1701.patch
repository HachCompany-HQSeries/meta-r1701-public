 	}
-
+	if (state->chrg_type == CHRG_OTG) {
+		state->online = 1;
+	}
 	dev_dbg(bq->dev, "S:CHG/PG/VSYS=%d/%d/%d, F:CHG/BOOST/BAT=%d/%d/%d\n",
 		state->chrg_status, state->online, state->vsys_status,
 		state->chrg_fault, state->boost_fault, state->bat_fault);

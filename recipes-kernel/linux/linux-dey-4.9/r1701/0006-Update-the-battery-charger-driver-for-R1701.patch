+	case USB_BUS_REMOVE://USB_EVENT_NONE:
 		/* Disable boost mode */
 		ret = bq25890_field_write(bq, F_OTG_CFG, 0);
+
 		if (ret < 0)
 			goto error;
 
+		mutex_lock(&bq->lock);
+		bq->state.online = 0;
+		bq->state.chrg_type = CHRG_NO_INPUT;
+		mutex_unlock(&bq->lock);
+
 		power_supply_changed(bq->charger);
 		break;
 	}

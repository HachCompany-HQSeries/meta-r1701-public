/* ECSPI1 */
&ecspi1 {
	/*
	 * There are no SPI slave devices on the SBC.
	 * Enable if adding your slave devices below.
	 */
        cs-gpios = <&gpio3 26 GPIO_ACTIVE_HIGH>;
	pinctrl-0 = <&pinctrl_ecspi1_master>;
	status = "okay";

	/* 2.7" Landscape MIP Display */
	mipDisplay: ecspi@0{
		compatible 		= "sharp,ls027b7dh01";
		reg 			= <0>;
		spi-max-frequency 	= <2000000>;
		spi-cs-high;
		gpios			= <&gpio1 5 GPIO_ACTIVE_HIGH>,	/* DISP PIN		*/
					  <&gpio1 3 GPIO_ACTIVE_HIGH>;	/* EXTCOMIN PIN		*/
		status = "okay";
	};

	/* 3.2" Portrait MIP Display */
